.row
  .span12
    = link_to root_path, class: 'pull-right' do
      = image_tag 'logo.png'
#main-navbar.navbar.navbar-static
  .navbar-inner
    .container{:style => "width: auto;"}
      %ul.nav
        %li{class: "#{select_tab 'profiles'}"}
          = link_to 'My profile', edit_profile_path
        %li{class: "#{select_tab 'venues'}"}
          = link_to 'My Venues', profile_venues_path
        %li{class: "#{select_tab 'request'}"}
          = link_to 'Requests', profile_requests_path
      %ul.nav.pull-right
        - unless user_signed_in?
          %li
            = link_to signin_path do
              Login
        - else
          %li#fat-menu.dropdown
            %a#drop3.dropdown-toggle{"data-toggle" => "dropdown", :href => "#", :role => "button"}
              #{current_user.name}
              %b.caret
            %ul.dropdown-menu{"aria-labelledby" => "drop3", :role => "menu"}
              %li
                = link_to 'My profile', edit_profile_path
              %li
                %a{:href => "#", :tabindex => "-1"} Venues?
              %li.divider
              %li
                = link_to signout_path, tabindex: "-1" do
                  %i.icon-off
                  Log out

